        <apex:actionFunction action="{!doUpdate}" name="doUpdate" rerender="pageMessages,buttonGrp,loadingImg">
            <apex:param name="firstParam" assignTo="{!jupdate}" value="" />
        </apex:actionFunction>
        <apex:actionFunction action="{!cancel}" name="cancel" />
    </apex:form>
    
